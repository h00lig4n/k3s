apiVersion: argoproj.io/v1alpha1
kind: Application
metadata:
  name: uptime-kuma
  namespace: argocd
  labels:
    image-policy: semver
spec:
  destination:
    namespace: common
    server: https://kubernetes.default.svc
  syncPolicy:
    automated:
      selfHeal: true
  project: common
  sources:
    - path: uptime-kuma
      repoURL: https://github.com/h00lig4n/k3s.git
      targetRevision: HEAD
